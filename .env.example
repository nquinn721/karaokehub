# =============================================================================
# KARAOKE HUB ENVIRONMENT CONFIGURATION
# =============================================================================
# This file shows the structure of environment variables used in the application.
# In production (Cloud Run), these are split between Environment Variables and Secrets.

# =============================================================================
# CLOUD RUN ENVIRONMENT VARIABLES (Regular Variables)
# =============================================================================
# These are set as regular environment variables in Cloud Run

# Application Environment
NODE_ENV=development
# PORT is automatically set by Cloud Run to 8080
PORT=8000

# Database Connection (Production uses Cloud SQL)
DATABASE_NAME=karaoke-hub
DATABASE_SOCKET_PATH=/cloudsql/heroic-footing-460117-k8:us-central1:accountant
DATABASE_SYNCHRONIZE=false
INSTANCE_CONNECTION_NAME=heroic-footing-460117-k8:us-central1:accountant

# URL Configuration
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# For Production
# FRONTEND_URL=https://karaoke-hub.com
# BACKEND_URL=https://karaoke-hub.com
# ALLOWED_ORIGINS=https://karaoke-hub.com

# Production Features
PRODUCTION_UPLOAD_TOKEN=karaoke-hub-data-integration-system

# Puppeteer Configuration (Production)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Stripe Configuration (Product IDs)
STRIPE_AD_FREE_PRICE_ID=price_ad_free_monthly
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly

# JWT Configuration
JWT_EXPIRES_IN=24h

# =============================================================================
# CLOUD RUN SECRETS (Sensitive Variables)
# =============================================================================
# These are stored as Google Cloud Secrets and injected as environment variables

# Database Credentials
DATABASE_USERNAME=admin
DATABASE_PASSWORD=password
# For local development only - Production uses Google Cloud SQL with secrets

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# AI/ML APIs
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Stripe Configuration (Keys)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# DEVELOPMENT ONLY VARIABLES
# =============================================================================
# These are only used in local development

# Local Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306

# Development Features
ALLOW_LOCAL_PRODUCTION_UPLOAD=false

# Rate Limiting (Development)
THROTTLE_TTL=60
THROTTLE_LIMIT=20

# =============================================================================
# UNUSED/LEGACY VARIABLES (Kept for Reference)
# =============================================================================
# These are no longer used but kept for historical reference

# GitHub OAuth (not currently implemented)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook Parser App (legacy - no longer used)
# FACEBOOK_PARSER_APP_ID=your-facebook-parser-app-id
# FACEBOOK_PARSER_APP_SECRET=your-facebook-parser-app-secret
